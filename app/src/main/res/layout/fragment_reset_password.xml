<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.reset_password.ResetPasswordFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.reset_password.ResetPasswordFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/loginimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:background="@drawable/corner_top_40dp"
        app:cardCornerRadius="@dimen/dp_40"
        android:layout_marginTop="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tvTextDescription"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/rubik_light"
        android:text="На указанный e-mail придет письмо с ссылкой для сброса пароля"
        android:textAlignment="center"
        android:textColor="@color/grey_black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTextTitle" />

    <TextView
        android:id="@+id/tvTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Восстановить пароль"
        android:textAlignment="center"
        android:textColor="@color/grey_black"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogoWelcomeSlider3"
        android:lineSpacingMultiplier="0.8"/>

    <ImageView
        android:id="@+id/tvLogoWelcomeSlider3"
        android:layout_width="46dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/drevmass_logo" />

    <LinearLayout
        android:id="@+id/editTextLinerLayout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTextDescription">

        <TextView
            android:id="@+id/helperTextEditTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:fontFamily="@font/rubik_light"
            android:text="Введите e-mail"
            android:textColor="@color/grey_200"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="-9dp"
            android:backgroundTint="@color/woody"
            android:drawableStart="@drawable/icon_email"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="@dimen/dp_10"
            android:fontFamily="@font/rubik_light"
            android:hint="Введите e-mail"
            style="style_editText"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:lineBreakStyle="loose"
            android:textColor="@color/grey_black"
            android:textColorHint="@color/grey_50" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRecover"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_56"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_50dp_woody_opacity"
        android:backgroundTint="@color/woody_opacity"
        android:fontFamily="@font/rubik_light"
        android:text="Сбросить"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLinerLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>