<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile.callback.CallbackFragment">

    <EditText
        android:id="@+id/editTextCallback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:fontFamily="@font/rubik_light"
        android:gravity="top"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:hint="Расскажите, что не работает?"
        android:textColor="@color/grey_black"
        android:textColorHint="@color/grey_200"
        android:textSize="@dimen/sp_16"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/btnSend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/background_50dp_woody"
        android:fontFamily="@font/rubik_regular"
        android:text="Отправить"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>